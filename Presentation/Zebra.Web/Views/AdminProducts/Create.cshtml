@model Zebra.ViewModels.View.AdminProducts.VMAdminProductsCreate

@using (Html.BeginForm("Create", "AdminProducts", FormMethod.Post, new { @id = "addForm" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.ProductId)
    <h5 class="mdl-dialog__title">Dodaj nowy produkt</h5>
    <div class="mdl-dialog__content">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        @Html.LabelFor(model => model.Barcode, htmlAttributes: new { @class = "mdl-textfield__label" })
                        @Html.EditorFor(model => model.Barcode, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                        @Html.ValidationMessageFor(model => model.Barcode, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "mdl-textfield__label" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "mdl-textfield__label" })
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        @Html.LabelFor(model => model.BasePrice, htmlAttributes: new { @class = "mdl-textfield__label" })
                        @Html.EditorFor(model => model.BasePrice, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                        @Html.ValidationMessageFor(model => model.BasePrice, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="mdl-dialog__actions">
        <button type="submit" class="btn btn-success closeDialog">Zapisz</button>
    </div>
}
