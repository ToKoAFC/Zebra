@model Zebra.ViewModels.View.AdminCategory.VMAdminCategoryIndex


<div style="margin:30px">
    <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
        <thead>
            <tr>
                <th class="mdl-data-table__cell--non-numeric">Kategorie</th>
                <th>Nazwa</th>
                <th>Usuń</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td class="mdl-data-table__cell--non-numeric">@category.CategoryName</td>                    
                    <td><a href="@Url.Action("Edit",new { categoryId = category.CategoryId})"><i class="material-icons">edit</i></a></td>
                    <td><a href="@Url.Action("Delete",new { categoryId = category.CategoryId})"><i class="material-icons" style="color:red">delete</i></a></td>
                </tr>
            }

        </tbody>
    </table>
</div>

<a href="@Url.Action("Create")" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored" style="top: auto;right: 50px;bottom: 50px;left: auto;position: fixed;"><i class="material-icons" style="color:white">add</i></a>