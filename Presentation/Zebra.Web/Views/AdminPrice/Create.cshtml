@model Zebra.ViewModels.View.AdminPrice.VMAdminPriceCreate
@using (Html.BeginForm("Create", "AdminPrice", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <h5 class="mdl-dialog__title">Dodaj nowy rabat</h5>
    <div class="mdl-dialog__content">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(x => x.DiscountId)

            <div class="form-group">
                <div class="col-md-10">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "mdl-textfield__label" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "mdl-textfield__label" })
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>                      

            <div class="form-group">
                <div class="col-md-10">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        @Html.LabelFor(model => model.DiscountPercent, htmlAttributes: new { @class = "mdl-textfield__label" })
                        @Html.EditorFor(model => model.DiscountPercent, new { htmlAttributes = new { @class = "mdl-textfield__input" } })
                        @Html.ValidationMessageFor(model => model.DiscountPercent, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="mdl-dialog__actions">
        <button type="submit" class="btn btn-success closeDialog">Zapisz</button>
    </div>
}
